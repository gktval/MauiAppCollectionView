<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:MauiAppCollectionView"
             x:Class="MauiAppCollectionView.MainPage">

    <StackLayout>

        <Label Text="Grid 1"/>
        <local:DataGrid x:Name="grid1"/>

        <BoxView Style="{StaticResource HRule}"/>
        <Label Text="Grid 2"/>
        <local:DataGrid x:Name="grid2" ItemsSource="{Binding DataSource}"/>



    </StackLayout>
</ContentPage>
